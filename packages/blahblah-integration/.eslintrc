{
  "extends": ["airbnb-base"],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "semi": ["error", "never"],
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "no-use-before-define": ["error", {
      "functions": false,
      "classes": true
    }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement"
    ],
    "import/no-extraneous-dependencies": "off"
  }
}